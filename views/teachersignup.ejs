<%- include("header") -%>

<body class="signup-body">
  <h1 class="signup-chootor">Chootor</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <header class="card-header">
          <a href="/login" class="float-right btn btn-outline-success mt-1">Log in</a>
          <h4 class="card-title mt-2">Sign up</h4>
        </header>
        <article class="card-body">

          <!-- register form TEACHERS -->

          <form class="item" action="/teachersignup" method="post">

            <div class="form-group">
              <div class="form-row">
                <div class="col form-group">
                  <label>First name </label>
                  <input type="text" class="form-control" name="newFirstName" required autocomplete="off">
                </div> <!-- form-group end.// -->

                <div class="col form-group">
                  <label>Last name</label>
                  <input type="text" class="form-control" name="newLastName" required autocomplete="off">
                </div> <!-- form-group end.// -->
              </div> <!-- form-row end.// -->
              <small class="text-muted">*Please ensure to write your name properly, as they cannot be changed in the future.</small>
            </div>


            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" name="newEmail" required autocomplete="off">
              <small class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div> <!-- form-group end.// -->

            <div class="form-group">
              <label>Subject Specialties</label>
                <input type="text" class="form-control" name="newSubjects" required placeholder="i.e. Math, English, Science, C++, Web Development" autocomplete="off">
                <small class="form-text text-muted">Write the subjects you'll be teaching. Separate each subject by comma</small>
            </div>

            <div class="form-group">
              <label>Tell us about yourself</label>
                <input type="text" class="form-control" name="newBio" required placeholder="" autocomplete="off">
                <small class="form-text text-muted">You can write something funny, say your credentials, your rates, etc.</small>
            </div>

            <div class="form-row">

              <div class="col form-group">
                <label>City/Municipality</label>
                <input type="text" class="form-control" name="newCity" required autocomplete="off">
              </div> <!-- form-group end.// -->

              <div class="col form-group">
                <label>Country</label>
                <input type="text" class="form-control" name="newCountry" required autocomplete="off">
              </div> <!-- form-group end.// -->
            </div> <!-- form-row end.// -->

            <div class="form-group">
              <label>Create password</label>
              <input type="password" class="form-control" name="newPassword" required autocomplete="off">
            </div> <!-- form-group end.// -->

            <div class="form-group">
              <button type="submit" class="btn btn-success btn-block"> Register </button>
            </div> <!-- form-group// -->

            <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you accept our <br> Terms of use and Privacy Policy.</small>

          </form>

        </article> <!-- card-body end .// -->

      </div> <!-- card.// -->
    </div> <!-- col.//-->
  </div> <!-- row.//-->
</body>

<%- include("footer") -%>
